<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="16dp">

    <EditText
        android:id="@+id/folderNameEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter folder name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createFolderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancelFolderButton"
        app:layout_constraintTop_toBottomOf="@id/folderNameEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

    <Button
    android:id="@+id/cancelFolderButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="취소"
    app:layout_constraintEnd_toStartOf="@id/createFolderButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/folderNameEditText"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
